@page "/"
@inherits IndexBase

@if (User is not null && User.Email is not null)
{
     <MudText Typo="Typo.h4">Available courses</MudText>
    @if (Courses is not null && Courses.Count() > 0)
    {
        <MudGrid>
            @foreach (var item in Courses)
            {
                <MudItem xs="12" sm="6" md="3" lg="2">
                    <MudPaper MinHeight="350px">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">@item.Title</MudText>
                            </CardHeaderContent>
                            <CardHeaderActions>
                                <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Default" />
                            </CardHeaderActions>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>@item.Description.</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="()=>GoToCourse(item.Id)">Read more</MudButton>
                        </MudCardActions>
                    </MudPaper>
             
                </MudItem>
            }
        </MudGrid>
    }
}
else
{
    <MudProgressCircular></MudProgressCircular>
}

